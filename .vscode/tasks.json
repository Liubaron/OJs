{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++.exe build active file",
			"command": "\"${config:task.gccpath}/g++.exe\"",
			"args": [
				"-Wall",
				"-g",
				"${file}",
				"-o",
				"${workspaceFolder}/Debug/${relativeFileDirname}/${fileBasenameNoExtension}.exe"
			],
			"options": {
				"cwd": "${config:task.gccpath}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: ${config:}/g++.exe"
		},

		{
			"type": "cppbuild",
			"label": "C/C++: g++.exe build active file",
			"command": "D:\\Program Files\\mingw-w64\\msys2\\mingw64\\bin\\g++.exe",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"${file}",
				"-o",
				"${workspaceFolder}/Debug\\${fileBasenameNoExtension}.exe"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: \"D:\\Program Files\\mingw-w64\\msys2\\mingw64\\bin\\g++.exe\""
		}
	]
}